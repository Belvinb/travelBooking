<section class="user-profile section">
    <div class="row">
        {{#each address}}
        {{#each this.address}}
        <div class="col-lg-4 col-md-6">
            <!-- Add address -->
            <div class="widget add-address mb-0">
                <a href="/delete-address/{{this._id}}" class="delete-address"><i class="fa fa-trash"></i></a>
                <h3 class="widget-header user">Address</h3>

                <form action="/add-new-address" id="addNewAddress" method="post">
                    <div class="form-group">
                        <label for="Name"> Name: {{this.Name}}</label>

                    </div>
                    <div class="form-group">
                        <label for="house-name">House: {{this.House}}</label>
                    </div>
                    <div class="form-group">
                        <label for="post">Post: {{this.Post}}</label>
                    </div>
                    <div class="form-group">
                        <label for="townOrcity">Town/City : {{this.Town}}</label>
                    </div>

                    <div class="form-group">
                        <label for="district">District : {{this.District}}</label>

                    </div>
                    <div class="form-group">
                        <label for="state">State : {{this.State}}</label>
                    </div>
                    <div class="form-group">
                        <label for="Pin code">PIN Code : {{this.Pin}}</label>
                    </div>

                    {{#if this.Status}}
                    <a href="/removeDefault/{{this._id}}" class="btn btn-primary"> Default<i
                            class="fa fa-check-circle-o ml-2"></i></a>
                    {{else}}
                    <a href="/makeDefault/{{this._id}}" class="btn btn-success">Make Default</a>
                    {{/if}}

                </form>
            </div>
        </div>
        {{/each}}
        {{/each}}
    </div>

</section>