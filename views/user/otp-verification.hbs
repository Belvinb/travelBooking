<section class="login py-5 border-top-1 common-bg-all">
    <div class="container">
        <div class="row justify-content-center pt-5">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border">
                    <h3 class="bg-gray p-4" style="color:white ;">OTP Login</h3>
                    <form action="/login/otp" method="post">
                        {{#if invalidOtp}}
                        <p class="errorsub">{{invalidOtp}}</p>
                        {{/if}}


                        <fieldset class="p-4">
                            <label for="phone" style="color:white">Enter the OTP</label>
                            <input type="tel" placeholder="Enter the OTP" name="otp" id="customerMobile"
                                class="border p-3 w-100 my-2" autocapitalize="off" autocorrect="off" minlength="4"
                                maxlength="4" autofocus>

                            <div class="text-center mt-3">
                                <span class="d-block mobile-text" id="countdown" style="color:white ;"></span>
                            </div>
                            <div class="text-center mt-3">
                                <a href="/login/resend-otp">
                                    <span class="d-block mobile-text" id="resend" style="color:white ;"></span>
                                </a>
                            </div>

                            <button type="submit"
                                class="d-block py-3 px-5 bg-primary text-white border-0 rounded font-weight-bold mt-3">Verify</button>
                            <a class="mt-3 d-block  text-primary" href="/user-login">Back to login</a>
                            <a class="mt-3 d-inline-block text-primary" href="/user-signup">Register Now</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>