<!--===============================
=            Hero Area            =
================================-->

<div style="overflow-x:hidden !important">

    <section class="hero-area bg-1 text-center overly">
        {{#each banner}}
        {{#if this.status}}
        <img  src="/banner-images/{{this._id}}.jpg" alt="" class="main-bg-img my-auto">
        {{/if}}
        {{/each}}
        <!-- Container Start -->
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-12">
                    <!-- Header Contetnt -->
                    {{#each banner}}
                    {{#if this.status}}
                    <div class="content-block">
                        <h1 class="hero-header">{{this.mainTitle}}</h1>
                        <h2 class="sub-hero-header text-white">{{this.subTitle}}</h2>
                        <div class="short-popular-category-list text-center">
                            <h2>Popular Destinations</h2>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <a href="#" class="popularDestination"></i>
                                        {{this.list1}}</a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="popularDestination"></i>
                                        {{this.list2}}</a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="popularDestination">{{this.list3}}</a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="popularDestination">
                                        {{this.list4}}</a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="popularDestination">
                                        {{this.list5}}</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    {{/if}}
                    {{/each}}
                    <!-- Advance Search -->
                    <div class="advance-search">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-12 col-md-12 align-content-center">

                                    <form action="/search" method="get" id="searchBar2">
                                        <div class="form-row">
                                            <div class="form-group col-md-10">
                                                <input type="search" class="form-control my-2 my-lg-1" name="search"
                                                    id="inputtext4" placeholder="Where to.... ? " />
                                            </div>
                                            <div class="form-group col-md-2">
                                                <button type="submit" class="btn btn-primary">Search
                                                    Now</button>
                                            </div>
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- Container End -->
    </section>


    <section class="popular-deals section bg-gray ">






        <div class="row mr-2">
            <!-- offer 01 -->
            {{#if searchResult }}
            {{#each searchResult}}
            <div class="col-lg-3 offset-lg-0 col-md-5 offset-md-1 col-sm-5 col-10 mx-auto ">
                <!-- product card -->
                <div class="product-item bg-light">
                    <div class="card " style="width:22rem;height:28rem;">
                        {{!-- height 36 rem --}}
                        <div class="thumb-content">

                            {{!-- {{#if percentage}}
                            <span class="product-label label-new">-{{this.percentage}}</span>
                            {{/if}} --}}
                            {{#if actualPrice}}
                            <div class="price" style="top: 39px;left: 13px;background:green">₹{{this.Price}}
                            </div>
                            <del class="price orginal-price">₹{{this.actualPrice}}</del>
                            {{else}}
                            <div class="price" style="top: 7px;left: 5px">₹{{this.Price}}</div>
                            {{/if}}

                            <a href="/./view-details/{{this._id}}">
                                <img class="card-img-top img-fluid img-thumbnail" style="height: 15rem;"
                                    src="/package-images/{{this._id}}.jpg" alt="Card image cap" />
                            </a>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title"><a href="/./view-details/{{this._id}}">{{this.Name}}</a></h4>
                            {{!-- {{#each ../user.favorites}}
                            {{#if this.status}}
                            <button style="color:red">checker</button>
                            {{/if}}
                            {{/each}} --}}
                            <button class="fa fa-heart hearts"
                                onclick="addToFavs('{{this._id}}','{{this.Price}}')"></button>
                            <ul class="list-inline product-meta">
                                <li class="list-inline-item">
                                    <a href="/./view-details/{{this._id}}"><i
                                            class="fa fa-folder-open-o"></i>{{this.Category}}</a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="/./view-details/{{this._id}}"><i
                                            class="fa fa-calendar"></i>{{this.Date}}</a>
                                </li>
                            </ul>
                            <p class="card-text">{{this.Description}}</p>
                            <table class="card-text">{{this.textfield}}</table>
                            <p class="card-text">{{this.textfield}}</p>



                            {{!-- <a href="/add-to-favorites/{{this._id}}" class="btn btn-danger">Book now</a>
                            --}}
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            {{else}}
            <div class="container mr-5 pr-5">

                <h2 class="ml-auto" style="color:white ;text-align:center">Sorry........!!!!! Couldn't Find any results</h2>
            </div>
            {{/if}}
        </div>
    </section>

    {{#each user}}
    {{this.Name}}
    {{/each}}





    <section class="call-to-action overly bg-3 section-sm">
        <!-- Container Start -->
        <div class="container">
            <div class="row justify-content-md-center text-center">
                <div class="col-md-8 col-12">
                    <div class="content-holder">
                        <h2>Want to ask us something?</h2>
                        <ul class="list-inline mt-30">
                            <li class="list-inline-item"><a class="btn btn-main" href="#">Connect with
                                    us</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Container End -->
    </section>
</div>
<script>
    jQuery('#searchBar2').validate({
        rules: {
            search: 'required'
        }, messages: {
            search: ''
        }
    })
</script>